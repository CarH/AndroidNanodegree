<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!-- Main activity theme -->
    <!--<style name="MovieMainTheme" parent="AppTheme">-->
        <!--<item name="actionBarStyle">@style/ActionBar.Solid.PopularMovie</item>-->
    <!--</style>-->

    <!--<style name="ActionBar.Solid.PopularMovie" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">-->
        <!--<item name="android:fontFamily">cursive</item>-->
        <!--<item name="background">@color/black_opacity_60</item>-->
    <!--</style>-->

    <style name="BaseSectionStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/detail_section_margin</item>
    </style>
    
    <style name="BaseCardStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/card_margin</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="cardBackgroundColor">@color/color_card</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
    </style>

    <style name="BaseTextDetailLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseTitleDetailLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <!--<item name="android:fontFamily">cursive</item>-->
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="BaseImageGridLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:src">@drawable/ic_image_placeholder</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/color_primary_dark</item>
    </style>

    <style name="BaseTextGridLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/black_opacity_60</item>
        <item name="android:textColor">@color/white_opacity_90</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="BaseDetailMovieTitleLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white_opacity_90</item>
        <item name="android:layout_height">78dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BaseImageLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">140dp</item>
        <item name="android:minHeight">200dp</item>
    </style>

    <style name="BaseSeparatorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white_12</item>
    </style>

    <!-- To avoid changing the font size in landscape mode -->
    <style name="ToolbarTitleStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
